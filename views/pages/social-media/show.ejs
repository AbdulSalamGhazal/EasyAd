<% layout('layouts/boilerplate') %>
<div class="row mb-5">
    <div class="col-6 ">
        <h1 class="mb-5"><%= campaign.name %> </h1>
        <div class="mb-5">
            <% if ( campaign.platform.includes('google')) { %>                        
            <img class=" mx-2 img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/281/281764.png" alt="">
            <% } %>
            <% if ( campaign.platform.includes('meta')) { %>                        
            <img class=" mx-2 img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/6033/6033716.png" alt="">
            <% } %>
            <% if ( campaign.platform.includes('snapchat')) { %>                        
            <img class=" mx-2 mr-2 img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/2111/2111616.png" alt="">
            <% } %>
            <% if ( campaign.platform.includes('tiktok')) { %>                        
            <img class=" mx-2 img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/3046/3046121.png" alt="">
            <% } %>
        </div>
        <div class="mb-1">
            <h2><%= campaign.spend %>$ out of <%= campaign.budget %>$   </h2>
        </div>
        <div class="mb-5">

        
        </div>
        <div class="card mb-5" >
            <h3 class="card-header ps-3 text-bg-secondary ">Audiunce</h3>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= campaign.country %> </li>
              <li class="list-group-item"><%= campaign.interest %> </li>
              <li class="list-group-item"><%= campaign.age %> </li>
              <li class="list-group-item"><%= campaign.gender %> </li>
            </ul>
        </div>
        <div class="card bg-warning " >
            <h3 class="card-header ps-3 ">Results</h3>
                <table class="table bg-white">
                    <thead>
                      <tr>
                        <th scope="col"></th>
                        <th scope="col">Count</th>
                        <th scope="col">Cost per one</th>
                      </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Impression</th>
                            <td><%= campaign.impression %></td>
                            <td><%= Math.round(campaign.spend/campaign.impression * 100) / 100 %>$</td>
                          </tr>
                          <tr>
                            <th scope="row">Event A</th>
                            <td><%= campaign.event_A %></td>
                            <td><%= Math.round(campaign.spend/campaign.event_A * 100) / 100 %>$</td>
                          </tr>
                          <tr>
                            <th scope="row">Event B</th>
                            <td><%= campaign.event_B %></td>
                            <td><%= Math.round(campaign.spend/campaign.event_B * 100) / 100 %>$</td>
                          </tr>
                    </tbody>
                </table>
                
        </div>


    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center "><%= campaign.headline %></h1>
            </div>
            <hr>
            <img src="<%= campaign.image %>" alt=""class="card-img-top img-fluid">
            <div class="card-body d-grid gap-2">
                <a href="<%= campaign.URL %>" class="card-link btn btn-outline-dark px-auto btn-lg"><%= campaign.CTA %></a>

            </div>
        </div>



    </div>

</div>
<div  class="d-grid gap-2 d-md-flex justify-content-md-end mb-4">
    <a class=" btn btn-info btn-lg px-5" href="/social-media/<%=campaign._id%>/edit">Edit</a>         
    <form class="d-inline"action="/social-media/<%= campaign._id %>?_method=DELETE" method="post">
        <button class="btn btn-danger btn-lg px-5">Delete</button>
    </form>        
</div>
