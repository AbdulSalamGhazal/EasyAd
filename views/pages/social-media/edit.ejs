<% layout('layouts/boilerplate') %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  You can't Edit some fields after Campagin creation.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
</div>


<form class="row g-3 mb-3" action="/social-media/<%= campaign._id %>?_method=PUT" method="post">

    <div class="col-md-6">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="campaign[name]" value="<%= campaign.name %> ">
    </div>
    <div class="col-md-6 " >
        <label for="goal" class="form-label">Goal</label>
      <input disabled type="text" class="form-control" id="goal" name="campaign[goal]" value="<%= campaign.goal %> ">
    </div>


    <label class="form-label">Platforms</label>
    <div class="col-md-3">    
      <input disabled <%=campaign.platform.includes("google") ? "checked": "" %> class="form-check-input" type="checkbox" id="google" name="campaign[platform]" value="google" />
      <label class="fs-2"for="google"><img class=" img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/281/281764.png" alt=""> Google</label>
    </div>
    <div class="col-md-3">
      <input disabled <%=campaign.platform.includes("meta") ? "checked": "" %> class="form-check-input" type="checkbox" id="meta" name="campaign[platform]" value="meta" />
      <label class="fs-2" for="meta"><img class=" img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/6033/6033716.png" alt=""> Meta</label>
    </div>
    <div class="col-md-3">
      <input  disabled <%=campaign.platform.includes("snapchat") ? "checked": "" %> class="form-check-input" type="checkbox" id="snapchat" name="campaign[platform]" value="snapchat" />
      <label class="fs-2"for="snapchat"><img class=" img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/2111/2111616.png" alt=""> Snapchat</label>
    </div>
    <div class="col-md-3">
      <input disabled <%=campaign.platform.includes("tiktok") ? "checked": "" %> class="form-check-input" type="checkbox"  id="tiktok" name="campaign[platform]"value="tiktok" />
      <label class="fs-2"for="tiktok"><img class=" img-fluid"width="70px" height="70px" src="https://cdn-icons-png.flaticon.com/512/3046/3046121.png" alt=""> Tiktok</label>
  </div>

    
   

    <div class=" col-md-6">
        <label class="form-label" for="budget">Budget</label>
        <div class="input-group">
            <input type="text" id="budget" name="campaign[budget]" class="form-control" value="<%= campaign.budget %> " >
            <span class="input-group-text">$</span>
        </div>
      </div> 

    <div class="col-md-3">
      <label for="start_date" class="form-label">Start</label>
      <input type="date" disabled name="campaign[start_date]" class="form-control" id="start_date" value="<%= campaign.start_date %>" >
    </div>

    <div class="col-md-3">
      <label for="end_date" class="form-label">End</label>
      <input type="date" name="campaign[end_date]" class="form-control" id="end_date" value="<%= campaign.end_date %>">
    </div>
    
    <div class="col-md-12">


      <label for="input-group" class="form-label">Audiunce</label>
      <div class="input-group">
        <span class="input-group-text">Country</span>
        <select class="form-select" multiple size="3"  name="campaign[country]">
          <option value="Saudi Arabia" <%=campaign.country.includes("Saudi Arabia") ? "selected": "" %> >Saudi Arabia</option>
          <option value="United Arab Emirates" <%=campaign.country.includes("United Arab Emirates") ? "selected": "" %> >United Arab Emirates</option>
          <option value="Qatar" <%=campaign.country.includes("Qatar") ? "selected": "" %> >Qatar</option>
          <option value="Bahrain" <%=campaign.country.includes("Bahrain") ? "selected": "" %> >Bahrain</option>
          <option value="Oman" <%=campaign.country.includes("Oman") ? "selected": "" %> >Oman</option>
        </select>
        <span class="input-group-text">Interest</span>
        <select class="form-select" multiple size="3"  name="campaign[interest]">
          <option value="General" <%=campaign.interest.includes("General") ? "selected": "" %>>General</option>
          <option value="Sportt"<%=campaign.interest.includes("Sportt") ? "selected": "" %>>Sportt</option>
          <option value="Beauty"<%=campaign.interest.includes("Beauty") ? "selected": "" %>>Beauty</option>
          <option value="Fashion"<%=campaign.interest.includes("Fashion") ? "selected": "" %>>Fashion</option>
          <option value="Health"<%=campaign.interest.includes("Health") ? "selected": "" %>>Health</option>
          <option value="Politics"<%=campaign.interest.includes("Politics") ? "selected": "" %>>Politics</option>
          <option value="Foods"<%=campaign.interest.includes("Foods") ? "selected": "" %>>Foods</option>
          <option value="Games"<%=campaign.interest.includes("Games") ? "selected": "" %>>Games</option>
          <option value="Travel"<%=campaign.interest.includes("Travel") ? "selected": "" %>>Travel</option>
          <option value="Apps"<%=campaign.interest.includes("Apps") ? "selected": "" %>>Apps</option>
          <option value="Pets"<%=campaign.interest.includes("Pets") ? "selected": "" %>>Pets</option>
        </select>
          <span class="input-group-text">Age</span>
          <select class="form-select" multiple size="3"  name="campaign[age]">
            <option value="13-17"<%=campaign.age.includes("13-17") ? "selected": "" %>>13-17</option>
            <option value="18-24"<%=campaign.age.includes("18-24") ? "selected": "" %>>18-24</option>
            <option value="25-34"<%=campaign.age.includes("25-34") ? "selected": "" %>>25-34</option>
            <option value="35-44"<%=campaign.age.includes("35-44") ? "selected": "" %>>35-44</option>
            <option value="45-54"<%=campaign.age.includes("45-54") ? "selected": "" %>>45-54</option>
            <option value="55+"<%=campaign.age.includes("55+") ? "selected": "" %>>55+</option>
          </select>

          <span class="input-group-text">Gender</span>
          <select class="form-select" multiple size="3"  name="campaign[gender]">
            <option value="male"<%=campaign.gender.includes("male") ? "selected": "" %>>male</option>
            <option value="female"<%=campaign.gender.includes("female") ? "selected": "" %>>female</option>
          </select>

      </div>
  </div>


    <div class="col-md-3">
      <label for="headline" class="form-label">Headline</label>
      <input type="text" class="form-control" id="headline" name="campaign[headline]" value="<%= campaign.headline %> ">
    </div>
    <div class="col-md-3">
      <label for="image" class="form-label">Image Link</label>
      <input type="url" class="form-control" id="image" name="campaign[image]" value="<%= campaign.image %> ">
    </div>
    <div class="col-md-3">
        <label for="CTA" class="form-label">Call To Actoin</label>
        <input type="text" class="form-control" id="CTA" name="campaign[CTA]" value="<%= campaign.CTA %> ">
      </div>
    <div class="col-md-3">
      <label for="URL" class="form-label">URL</label>
      <input type="url" class="form-control" id="URL" name="campaign[URL]" placeholder="Optional" value="<%= campaign.URL %> ">
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-success">Edit</button>
    </div>
  </form>
  