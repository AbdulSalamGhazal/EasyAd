<% layout('layouts/boilerplate') %>
<div class="alert alert-primary alert-dismissible fade show" role="alert">
   This Form will be sent to the influencer, it might get approved or declined 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
  </div>
  
<h1>Contact With <%= influencer.name %> </h1>

<form  class="row g-3 mb-3 needs-validation" novalidate action="" method="post" >


    <div class="col-md-6">
        <label for="name" class="form-label">Business Name</label>
        <input required  type="text" class="form-control" id="name" name="name">
      </div>
    <div class="col-md-6 " >
        <label for="goal" class="form-label">Available Dates</label>
    <select required id="goal" class="form-select" name="Ad[goal]">
        <option value="" selected>Choose...</option>
        <% for( let date of influencer.availableDates){ %> 
            <option ><%= date %> </option>
        <% } %>    
    </select>
    <div class="valid-feedback">Looks good!</div>

    </div>
    <div class="col-md-6">
        <label for="website" class="form-label">Website Link</label>
        <input required type="url" class="form-control" id="website" name="website">
    </div>
    <div class="col-md-6">
        <label for="product" class="form-label">Product Link</label>
        <input  type="url" class="form-control" id="product" name="product" placeholder="Optional">
    </div>

    <label for="product" class="form-label">Ads Materials</label>
    <div class="col-md-12 input-group">
        <span class="input-group-text">1</span>
        <input required type="url" class="form-control" id="product" name="product" placeholder="Required">
        <span class="input-group-text">2</span>
        <input  type="url" class="form-control" id="product" name="product" placeholder="Optional">
        <span class="input-group-text">3</span>
        <input  type="url" class="form-control" id="product" name="product" placeholder="Optional">
        <span class="input-group-text">4</span>
        <input  type="url" class="form-control" id="product" name="product" placeholder="Optional">

    </div>



    <div class="col-md-12">
        <label for="details" class="form-label">Ads Details</label>
        <textarea required class="form-control" name="details" id="details"  rows="4" placeholder="Describe What Do you want..."></textarea>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-success">Send</button>
      </div>
</form>